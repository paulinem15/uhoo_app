{
  "name": "uHoo",
  "version": "1.0.0",
  "description": "Desktop Application for uHoo",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-mac": "electron-builder --mac dir"
  },
  "build": {
    "appId": "com.electron.uhoo",
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.png"
    },
    "win":{
      "target": "nsis",
      "icon": "assets/logo_dark.ico"
    }
  },
  "author": "Pauline Manolo",
  "license": "ISC",
  "devDependencies": {    
    "electron": "^4.0.7",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "highcharts": "^7.0.3",
    "universal-cookie": "^3.0.7",
    "csv-parser": "^2.2.0",
    "js-sha256": "^0.9.0"
  }
}
